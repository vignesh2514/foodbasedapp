<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.askchitvish.activity.prem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.askchitvish.activity.prem.AppController"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.askchitvish.activity.prem.HomeScreen"

            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.askchitvish.activity.prem.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.askchitvish.activity.prem.SubCateg"
            android:label="@string/title_activity_sub_categ"
            android:parentActivityName="com.askchitvish.activity.prem.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.askchitvish.activity.prem.HomeScreen" />
        </activity>
        <activity
            android:name="com.askchitvish.activity.prem.DetailsActivity"
            android:parentActivityName="com.askchitvish.activity.prem.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.askchitvish.activity.prem.HomeScreen" />
        </activity>
        <activity
            android:name="com.askchitvish.activity.prem.YouTubActivity"
            android:label="@string/title_activity_you_tub"
            android:parentActivityName="com.askchitvish.activity.prem.DetailsActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.askchitvish.activity.prem.DetailsActivity" />
        </activity>
        <activity
            android:name="com.askchitvish.activity.prem.Trending"
            android:label="@string/title_activity_trending"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.askchitvish.activity.prem.RecentlyViewed"
            android:label="@string/title_activity_recently_viewed"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.askchitvish.activity.prem.MyFavourites"
            android:label="@string/title_activity_my_favourites"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.askchitvish.activity.prem.Aboutus"
            android:label="@string/title_activity_aboutus"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.askchitvish.activity.prem.Splash2"
            android:screenOrientation="portrait"
            android:theme="@style/Spp" />
        <activity
            android:name="com.askchitvish.activity.prem.Newrecipe"
            android:label="@string/title_activity_newrecipe"
            android:parentActivityName="com.askchitvish.activity.prem.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.askchitvish.activity.prem.HomeScreen" />
        </activity>
        <activity
            android:name="com.askchitvish.activity.prem.Imageload"
            android:label="@string/title_activity_imageload"
            android:parentActivityName="com.askchitvish.activity.prem.DetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.askchitvish.activity.prem.DetailsActivity" />
        </activity>
        <activity
            android:name="com.askchitvish.activity.prem.AllRecipes"
            android:label="@string/title_activity_all_recipes"
            android:parentActivityName="com.askchitvish.activity.prem.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.askchitvish.activity.prem.HomeScreen" />
        </activity>

        <service
            android:name="com.askchitvish.activity.prem.MyFcmId">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.askchitvish.activity.prem.MyService"  >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>