<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.v7ench.askchitvish.DetailsActivity"
    tools:showIn="@layout/activity_details">


    <ScrollView
        android:layout_width="fill_parent"
        android:id="@+id/aacb"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ddn"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/aad"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/load"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imav" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:id="@+id/aal"
                android:background="#c3c4c4"
                android:layout_below="@+id/imav"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:text="Name"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sivna"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/play"
                    android:id="@+id/audi"
                    android:padding="5dp"
                    android:layout_gravity="top"
                    android:layout_weight="0.5" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/video"
                    android:id="@+id/vide"
                    android:padding="5dp"
                    android:layout_gravity="top"
                    android:layout_weight="0.5" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/gallery"
                    android:id="@+id/lik"
                    android:layout_gravity="top"
                    android:padding="5dp"
                    android:layout_weight="0.5" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/unlike"
                    android:layout_gravity="top"
                    android:id="@+id/imagee"
                    android:padding="5dp"
                    android:layout_weight="0.5" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aal"
                android:weightSum="2"
                android:layout_centerHorizontal="true"
                android:id="@+id/tadi">

                <include layout="@layout/ingre"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    />
                <include layout="@layout/methonal"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>



            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
         android:id="@+id/taudi" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/tvidi" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="113dp"
        android:visibility="gone"
        android:id="@+id/timai" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="113dp"
        android:visibility="gone"
        android:id="@+id/sidi" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="113dp"
        android:visibility="gone"
        android:id="@+id/ca_id" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="113dp"
        android:visibility="gone"
        android:id="@+id/ttvb" />
<ImageButton
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/ddn"
    android:layout_alignParentBottom="true"
    android:background="@drawable/next_btn"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    android:id="@+id/aaaon"
      android:layout_height="250dp">

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:padding="5dp"
                 android:layout_height="200dp"
        android:visibility="invisible"
        android:contentDescription="Expanded image (touch to close)" />

</RelativeLayout>
</RelativeLayout>
